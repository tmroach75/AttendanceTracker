        </ScrollViewer>

        <!-- Implement this after working stackpanel and database connection -->
        <Button x:Name="generateNewCounter" Content="Generate New Counter" HorizontalAlignment="Left" Margin="551,10,0,0" VerticalAlignment="Top" Click="generateNewCounter_Click"/>
        
    </Grid>
</Window>
