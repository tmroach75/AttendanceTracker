<Window x:Class="AttendanceTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendanceTracker"
        mc:Ignorable="d"
        Title="Attendance Manager - Home" Height="650" Width="750">
    <Grid>
        <ScrollViewer>
            <StackPanel x:Name="CounterStackPanel" Orientation="Vertical" Width="698" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <local:Counter CounterTitle="General" />
                    <local:Counter CounterTitle="Prospective" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <local:Counter/>
                    <local:Counter />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <local:Counter />
                    <local:Counter />
                </StackPanel>
                
