                <local:Counter CounterTitle="Maps" HorizontalAlignment="Left" Height="459" Margin="239,270,0,0" VerticalAlignment="Top" Width="235"/>
                <local:Counter CounterTitle="Clock-In" HorizontalAlignment="Left" Height="455" Margin="10,585,0,0" VerticalAlignment="Top" Width="221"/>
                <local:Counter CounterTitle="Clock-Out" HorizontalAlignment="Left" Height="467" Margin="236,585,0,0" VerticalAlignment="Top" Width="209"/>
                -->
